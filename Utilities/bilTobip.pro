;;change a BIL file into a BIP filepro bilTobip, bilFname, bipFname, samples, lines, bands;;	bsqFname = output filename;;	bipFname = input filename;;	assumes integer formatopenr, bilun, /get, bilFnameopenw, bipun, /get, bipFname	billine = intarr(samples, bands)	for i=0, lines-1 do begin		readu, bilun, billine		for j=0, samples-1 do begin			writeu, bipun, billine(j,*)			end	endclose, bilunclose, bipunfree_lun, bilunfree_lun, bipunend