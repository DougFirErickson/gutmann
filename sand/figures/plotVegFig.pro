pro plotVegFig	vegSpec ='veg.txt'	npvSpec ='npv.txt'	soilSpec='soil.txt'	outfile ='vegfig2.ps'		vegcols = load_cols(vegSpec, veg)	npvcols = load_cols(npvSpec, npv)	soilcols = load_cols(soilSpec, soil)		npv = npv*1		wave = veg(0,*)		nw = 36	rw = 23	;	for i=1, 6 do begin	i=1	ni=4	nir = soil(i,nw)	red = soil(i,rw)	print, 'Soil NDVI =', float(nir-red)/(nir+red)	nir = npv(ni,nw)	red = npv(ni,rw)	print, 'NPV NDVI =', float(nir-red)/(nir+red)	nir = veg(i,nw)	red = veg(i,rw)	print, 'Veg NDVI =', float(nir-red)/(nir+red)	print, 'Wavelengths =', wave(rw), wave(nw)	set_plot, 'ps'	device, file=outfile, xsize=8, ysize=8, xoff=0, yoff=0, /inches, $		set_font='Times', /tt_font, font_size=18	plot, wave(0:46), veg(i,0:46), $		xtitle='Wavelength (micrometers)', xr=[0.4,1.4], /xstyle, xticks=10, $		ytitle='Reflectance * 10000', yr=[0,5000], /ystyle, yticks=5	oplot, wave(0:46), npv(ni,0:46), linestyle=1	oplot, wave(0:46), soil(i,0:46), linestyle=2	oplot, wave(47:60), veg(i,47:60)	oplot, wave(47:60), npv(ni,47:60), linestyle=1	oplot, wave(47:60), soil(i,47:60), linestyle=2	oplot, wave(61:81), veg(i,61:81)	oplot, wave(61:81), npv(ni,61:81), linestyle=1	oplot, wave(61:81), soil(i,61:81), linestyle=2	xyouts, 0.6, 4000, 'Vegetation'	xyouts, 0.6, 3800, 'NPV'	xyouts, 0.6, 3600, 'Soil'	oplot, [.45,.58], [4050,4050]	oplot, [.45,.58], [3850,3850], linestyle=1	oplot, [.45,.58], [3650,3650], linestyle=2	device, /close	set_plot, 'mac'	wait, 1;	endforend