pro prettyplotnvc, data, outfile, nclasses=nclassesif not keyword_set(nclasses) then nclasses=12openr, un, /get, datai=0lsave = !p.multi!p.multi=[0,2,4]savedev=!d.nameset_plot, 'ps'device,file= outfile ,xsize=8, ysize=8, xoff=0, yoff=0, /inches, $	set_font='Times', /tt_font, font_size=18!x.thick=8!y.thick=8!p.thick=8!p.font=1for class=0, nclasses-1 do begin	readu, un, i		Cdata=fltarr(i)	Ndata=intarr(i)	readu, un, Cdata, Ndata	title=string('Class'+strcompress(class+1))	tmp=float(Ndata)/255.	if class mod 3 eq 0 then begin		plot, Cdata, tmp, psym=1, $			yrange=[min(tmp)-0.01, max(tmp)+0.01], /ystyle, $			xrange=[min(Cdata)-5, max(Cdata)+5], /xstyle, $			xtitle='Century Aglivc+0.5 Stded', ytitle='NDVI', title=title, $			xticks=3, yticks=3			fit=linfit(Cdata, tmp)		y=[fit(0), fit(1)*200 + fit(0)]		oplot, [0,200], y	endif	print, fit	result=regress(transpose(Cdata), tmp, replicate(1.0, n_elements(tmp)),$		yfit, const, sigma, ftst, rval)	print, 'fit',result, 'const', const	print, 'sigma', sigma, 'ftest', ftst	print, 'R sq', (rval^2)endfordevice, /closeset_plot, savedev!p.multi=saveend