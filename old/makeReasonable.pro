pro fixImage, name, approxSize, newdir, prefix=prefix, suffix=suffix		if not keyword_set(prefix) then prefix=''	if not keyword_set(suffix) then suffix=''		read_jpeg, name, img	sz=size(img)	ns=sz(2)	nl=sz(3)	sfactor = ns / approxSize	lfactor = nl / approxSize	factor = sfactor > lfactor		newns = ns/factor	newnl = nl / factor	s_offset = ns mod factor	l_offset = nl mod factor		img = rebin(img(*,s_offset:ns-1, l_offset:nl-1), 3,newns,newnl)	print, name, newns, newnl, factor, ns, nl		cd, newdir, current=old	write_jpeg, prefix+name+suffix, img, true=1	cd, oldendpro makeReasonable, newSize=approxSize, prefix=prefix, suffix=suffix, newdir=newdir, start=start	if not keyword_set(start) then start=0	if not keyword_set(newdir) then newdir='normal'	if not keyword_set(prefix) then prefix=''	if not keyword_set(suffix) then suffix=''	if not keyword_set(approxSize) then approxSize = 1000		list=findfile('*.jpg*')		file_mkdir, newdir		for i=start, n_elements(list)-1 do begin		fixImage, list(i), approxSize, newdir, prefix=prefix, suffix=suffix	endforend